{
    "version": 2,
    "builds": [
        {
            "src": "app.py",
            "use": "@vercel/python@4.0.0"
        },
        {
            "src": "templates/**/*",
            "use": "@vercel/static@0.1"
        },
        {
            "src": "static/**/*",
            "use": "@vercel/static@0.1"
        }
    ],
    "routes": [
        {
            "src": "/templates/(.*)",
            "dest": "templates/$1"
        },
        {
            "src": "/static/(.*)",
            "dest": "static/$1"
        },
        {
            "src": "/(.*)",
            "dest": "app.py",
            "headers": {
                "Access-Control-Allow-Origin": "*",
                "Access-Control-Allow-Methods": "GET, POST, OPTIONS",
                "Access-Control-Allow-Headers": "Content-Type"
            }
        }
    ],
    "env": {
        "PYTHONUNBUFFERED": "1",
        "FLASK_APP": "app.py",
        "FLASK_ENV": "production"
    },
    "functions": {
        "app.py": {
            "memory": 1024,
            "maxDuration": 60
        }
    }
}